{{if data.active}}
<div class='notice'>
	SURGERY IN PROCESS
</div>
<br>
{{:helper.displayBar(data.progress, 0, 1)}}
{{/if}}
<div style="min-width: 480px">
		{{:helper.link('Scan', '', {'scan':1}, data.active? 'disabled':null)}}
		{{:helper.link('Process all', '', {'full':1}, data.active? 'disabled':null)}}
		{{:helper.link('<b>Process picked</b>', '', {'picked':1}, data.active? 'disabled':null)}}
		{{:helper.link('Abort', '', {'stop':1}, data.active? null:'disabled', data.active?'redButton':null)}}
		<br>
	<div class="item">
	<h3>Overall Status</h3>
	<div class="itemLabel">Brute damage: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_brute)}}</b></div></div>
	<div class="itemContent">
	{{:helper.displayBar(data.over_brute, 0, 100, (data.over_brute <= 25) ? 'good' : (data.over_brute <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Burn severity: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_burn)}}</b></div></div>
	<div class="itemContent">
	{{:helper.displayBar(data.over_burn, 0, 100, (data.over_burn <= 25) ? 'good' : (data.over_burn <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Toxin content: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_tox)}}</b></div></div>
	<div class="itemContent">
	{{:helper.displayBar(data.over_tox, 0, 100, (data.over_tox <= 25) ? 'good' : (data.over_tox <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Respiratory damage: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_oxy)}}</b></div></div>
	<div class="itemContent">
	{{:helper.displayBar(data.over_oxy, 0, 100, (data.over_oxy <= 25) ? 'good' : (data.over_oxy <= 50) ? 'average' : 'bad')}}</div>
	
	{{:helper.link('Toxin Kelation', '', {'toggle' : 'antitox'}, (data.antitox && !data.active) ? null:'disabled')}}
	{{:helper.link('Dialysis', '', {'toggle' : 'dialysis'}, (data.dialysis && !data.active) ? null:'disabled')}}
	</div>
	<h3>Organ Status</h3>
	{{for data.organs}}
	<div class="item">
		{{if value.internal}}
			<div class="itemLabel"><b>{{:value.name}}</b></div>
			<div class="itemContent" style="color:red"><b>Organ damage: {{:helper.round(value.inner_damage)}}</b></div><br>
			{{:helper.link(value.damage_picked?'<b>Fix internal damage</b>':'Fix internal damage','', {'toggle' : 'damage', 'id':value.id}, (value.damage && !data.active)  ? null:'disabled')}}
		{{else}}
			<div class="itemLabel"><b>{{:value.name}}</b></div>
			<div class="itemContent">
				<b style="color:red">Brute damage: {{:helper.round(value.brute_damage)}} </b>
				<b style="color:orange">Burn damage: {{:helper.round(value.burn_damage)}} </b>
			</div><br>
			{{:helper.link(value.damage_picked?'<b>Fix damage</b>':'Fix damage','',{'toggle':'damage','id':value.id}, (value.damage && !data.active) ?null:'disabled')}}
			{{:helper.link(value.wound_picked?'<b>Treat wounds</b>':'Treat wounds','',{'toggle':'wound','id':value.id}, (value.wound && !data.active) ?null:'disabled')}}
			{{:helper.link(value.ib_picked?'<b>Close IB</b>':'Close IB','',{'toggle':'ib','id':value.id}, (value.ib && !data.active) ?null:'disabled')}}
			{{:helper.link(value.shrapnel_picked?'<b>Shrapnel removal</b>':'Shrapnel removal','',{'toggle':'shrapnel','id':value.id}, (value.shrapnel && !data.active) ?null:'disabled')}}
			{{:helper.link(value.fracture_picked?'<b>Mend Fracture</b>':'Mend Fracture','',{'toggle':'fracture','id':value.id}, (value.fracture && !data.active) ?null:'disabled')}}
		{{/if}}
	</div>
	{{empty}}
	<div class="item"><b>No injuries found!</b></div>
	{{/for}}
</div>