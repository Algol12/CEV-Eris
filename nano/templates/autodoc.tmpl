{{if data.active}}
<div class='notice'>
	SURGERY IN PROCESS
</div>
<br>
{{:helper.displayBar(data.progress, 0, 1)}}
{{/if}}
<div style="min-width: 480px">
	{{:helper.link('Scan',            	'',	{'scan':1},		data.active? 'disabled':null)}}
	{{:helper.link('Process all',    	'',	{'full':1},     data.active? 'disabled':null)}}
	{{:helper.link('Process picked',	'',	{'picked':1},   data.active? 'disabled':null, 'greenButton')}}
	{{:helper.link('Abort',           	'',	{'stop':1},    !data.active? 'disabled':null, data.active?'redButton':null)}}
	<br>
	<div class="item">
	<h3>Overall Status</h3>
	<div class="itemLabel">Brute damage: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_brute)}}</b></div></div>
	<div class="itemContent">
		{{:helper.displayBar(data.over_brute, 0, 100, (data.over_brute <= 25) ? 'good' : (data.over_brute <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Burn severity: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_burn)}}</b></div></div>
	<div class="itemContent">
		{{:helper.displayBar(data.over_burn, 0, 100, (data.over_burn <= 25) ? 'good' : (data.over_burn <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Toxin content: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_tox)}}</b></div></div>
	<div class="itemContent">
		{{:helper.displayBar(data.over_tox, 0, 100, (data.over_tox <= 25) ? 'good' : (data.over_tox <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Respiratory damage: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.over_oxy)}}</b></div></div>
	<div class="itemContent">
		{{:helper.displayBar(data.over_oxy, 0, 100, (data.over_oxy <= 25) ? 'good' : (data.over_oxy <= 50) ? 'average' : 'bad')}}</div>
	<div class="itemLabel">Blood level: <div style="float:right; margin-right:6px"><b>{{:helper.round(data.blood_amount)}}</b></div></div>
	<div class="itemContent">
		{{:helper.displayBar(data.blood_amount, 0, 100, (data.blood_amount >= 85) ? 'good' : (data.blood_amount >= 60) ? 'average' : 'bad')}}</div>
	
		{{:helper.link('Toxin kelation',	'',{'toggle':'antitox', 	'id':1},	data.antitox_picked?	'selected':(data.antitox && !data.active) ? null:'disabled')}}
        {{:helper.link('Replenish blood',	'',{'toggle':'blood', 		'id':1},	data.blood_picked?		'selected':(data.blood && !data.active) ? 	null:'disabled')}}
        {{:helper.link('Dialysis',     		'',{'toggle':'dialysis', 	'id':1},	data.dialysis_picked?	'selected':(data.dialysis && !data.active)? null:'disabled')}}
	</div>
	<h3>Organ Status</h3>
	{{for data.organs}}
	<div class="item">
		{{if value.internal}}
			<div class="itemLabel"><b>{{:value.name}}</b></div>
			<div class="itemContent" style="color:red"><b>Organ damage: {{:helper.round(value.inner_damage)}}</b></div><br>
			{{:helper.link('Fix internal damage', value.damage_picked?'check':null, {'toggle' : 'damage', 'id':value.id}, (value.damage && !data.active)  ? null:'disabled')}}
		{{else}}
			<div class="itemLabel"><b>{{:value.name}}</b></div>
			<div class="itemContent">
				<b style="color:red">Brute damage: {{:helper.round(value.brute_damage)}} </b>
				<b style="color:orange">Burn damage: {{:helper.round(value.burn_damage)}} </b>
			</div><br>
			{{:helper.link('Fix damage',		'',	{'toggle':'damage',	 'id':value.id},    value.damage_picked?	'selected':(value.damage && !data.active)? 	 null:'disabled')}}
			{{:helper.link('Treat wounds',		'',	{'toggle':'wound',	 'id':value.id},    value.wound_picked?		'selected':(value.wound && !data.active)? 	 null:'disabled')}}
			{{:helper.link('Close IB',			'',	{'toggle':'ib',		 'id':value.id},    value.ib_picked?		'selected':(value.ib && !data.active)? 		 null:'disabled')}}
			{{:helper.link('Shrapnel removal',	'',	{'toggle':'shrapnel','id':value.id},    value.shrapnel_picked?	'selected':(value.shrapnel && !data.active)? null:'disabled')}}
			{{:helper.link('Mend Fracture',		'',	{'toggle':'fracture','id':value.id},    value.fracture_picked?	'selected':(value.fracture && !data.active)? null:'disabled')}}
		{{/if}}
	</div>
	{{empty}}
	<div class="item"><b>No injuries found!</b></div>
	{{/for}}
</div>