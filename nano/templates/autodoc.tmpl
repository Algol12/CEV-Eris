{{if data.locked}}
<div class='notice'>
	<h3><b>SURGERY IN PROCESS</b></h3>
	<i>Wait until all operations done</i><br>
</div>
{{/if}}
<div style="min-width: 480px">
	<h3>Overall Status</h3>
	<table>
		<tr>
			<td><div class="statusValue" style="color:red">
				<b>Brute: {{:data.over_brute}}</b></div></td>
			<td><div class="statusValue" style="color:yellow">
				<b>Burn: {{:data.over_burn}}</b></div></td>
			<td><div class="statusValue" style="color:green">
				<b>Toxin: {{:data.over_tox}}</b></div></td>
			<td><div class="statusValue" style="color:DeepSkyBlue">
				<b>Respiratory: {{:data.over_oxy}}</b></div></td>
		</tr>
	</table>
	{{:helper.link('Toxin Kelation', '', {'toggle' : 'antitox'}, data.antitox ? null:'disabled', data.antitox_picked ? 'redButton' : null)}}
	{{:helper.link('Dialysis', '', {'toggle' : 'dialysis'}, data.dialysis ? null:'disabled', data.dialysis_picked ? 'redButton' : null)}}
	<br>
	<h3>Organ Status</h3>
	{{:helper.link('Rescan', '', {'rescan':1}, data.active? 'disabled':null)}}
	{{:helper.link('Process all', '', {'full':1}, data.active? 'disabled':null)}}
	{{for data.organs}}
	<div class="item">
		<div class="itemLabel">{{:value.name}}</div>
		<div class="itemContent">
			{{if value.internal}}
			<div class="statusValue">
				Internal damage: {{:value.inner_damage}}
			</div>
			{{:helper.link('Fix internal damage', 'first-aid', {'toggle' : 'damage', 'id':value.id}, value.damage ? null:'disabled', value.damage_picked ? 'redButton' : null)}}
			{{else}}
			<table>
				<tr>
					<td><div class="statusValue" style="color:red">
						<b>Brute damage: {{:value.brute_damage}}</b></div></td>
					<td><div class="statusValue" style="color:yellow">
						<b>Burn damage: {{:value.burn_damage}}</b></div></td>
				</tr>
				<tr>
					<td>{{:helper.link('Fix damage', 'first-aid', {'toggle' : 'damage', 'id' : value.id}, value.damage ? null:'disabled', value.damage_picked ? 'redButton' : null)}}</td>
					<td>{{:helper.link('Mend Fracture', 'bone', {'toggle' : 'fracture', 'id' : value.id}, value.fracture ? null:'disabled', value.fracture_picked ? 'redButton' : null)}}</td>
					<td>{{:helper.link('Remove Shrapnel', 'star', {'toggle' : 'shrapnel', 'id' : value.id}, value.shrapnel ? null:'disabled', value.shrapnel_picked ? 'redButton' : null)}}</td>
					<td>{{:helper.link('Close wounds', 'band-aid', {'toggle' : 'wound', 'id' : value.id}, value.wound ? null:'disabled', value.wound_picked ? 'redButton' : null)}}</td>
				</tr>
			</table>
			{{/if}}
		</div>
	</div>
	{{empty}}
	<br><br><b>No injuries found!</b>
	{{/for}}
</div>